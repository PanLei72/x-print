<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">


    <changeSet id="1" author="print" context="!cuba">

        <createTable tableName="PRINT_QUEUE">
            <column name="ID" type="${uuid.type}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="VERSION" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="PRINTER_NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="SEQUENCE_NUMBER" type="BIGINT"/>
            <column name="LABEL_ID" type="${uuid.type}"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
        </createTable>

    </changeSet>


    <changeSet id="2" author="print" context="!cuba">

        <createTable tableName="LABEL_DESIGN">
            <column name="ID" type="${uuid.type}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="VERSION" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="LABEL_NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="varchar(255)"/>
            <column name="HEIGHT" type="DOUBLE"/>
            <column name="WIDTH" type="DOUBLE"/>
            <column name="CLASS_NAME" type="VARCHAR(1024)"/>
            <column name="ORIENTATION" type="INT"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
        </createTable>

    </changeSet>


    <changeSet id="3" author="print" context="!cuba">

        <createTable tableName="LABEL">
            <column name="ID" type="${uuid.type}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="VERSION" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="PRINTER_NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="LABEL_IDENTITY" type="varchar(255)"/>
            <column name="LABEL_NAME" type="varchar(255)"/>
            <column name="LABEL_DATA" type="varchar(4000)"/>
            <column name="LABEL_QUANTITY" type="INT"/>
            <column name="PRINT_STATUS" type="varchar(255)"/>
            <column name="PRINT_TIME" type="DATETIME"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
        </createTable>

    </changeSet>

</databaseChangeLog>